<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mentorShowSlotActivity">


    <Spinner
            android:id="@+id/spinner"
            android:layout_width="368dp"
            android:layout_height="82dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/show_allslots_list"
            app:layout_constraintVertical_bias="0.656"/>

    <ListView
            android:id="@+id/show_allslots_list"
            android:layout_width="match_parent"
            android:layout_height="579dp"
            android:listSelector="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="10dp" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" tools:layout_editor_absoluteX="8dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>